EXERCISE-3
CREATE TABLE Player(
   PId INTEGER CONSTRAINT ply_pk PRIMARY KEY,
   PName VARCHAR2(20) CONSTRAINT ply_nn NOT NULL,
   Ranking INTEGER);

EXERCISE-4
CREATE TABLE Tournament(
   TId INTEGER CONSTRAINT tour_pk PRIMARY KEY,
   TName VARCHAR2(30) CONSTRAINT tour_nn NOT NULL,
   StarDt DATE CONSTRAINT tour_str_nn NOT NULL, 
   EndDt DATE CONSTRAINT tour_end_nn NOT NULL,
   Prize INTEGER CONSTRAINT tour_pri_nn NOT NULL);
   
EXERCISE-5   
CREATE TABLE Match(MId INTEGER CONSTRAINT mat_pk PRIMARY KEY, 
TId INTEGER CONSTRAINT mat_fk REFERENCE T(Tid),
Player1 INTEGER CONSTRAINT mat_play_uk UNIQUE CONSTRAINT mat_pla_fk REFERENCE Player(Player1), 
Player2 INTEGER CONSTRAINT UNIQUE CONSTRAINT mat_pla2_fk REFERENCE Player(Player2),
MatchDt DATE CONSTRAINT mat_dt_nn NOT NULL,
Winner INTEGER CONSTRAINT mat_win_fk REFERENCE Person(Winner),
Score VARCHAR2(30) CONSTRAINT mat_sc_nn NOT NULL);

EXERCISE-6
ALTER TABLE Player ADD(MatchesPlayed NUMBER,MatchesWon Number);

EXERCISE-7
ALTER TABLE Player DROP(ContactNo);

EXERCISE-8
ALTER TABLE Player RENAME COLUMN PId TO PlayerId;

EXERCISE-9
ALTER TABLE player MODIFY(PName VARCHAR(50));

ASSIGN-2
CREATE TABLE Shopper(Shopperid INTEGER CONSTRAINT shop_pk PRIMARY KEY,
ShopperName VARCHAR2(20) CONSTRAINT shop_nn NOT NULL,
Gender CHAR(6) CONSTRAINT shop_ck CHECK(Gender IN('Male','Female')),
MobileNO NUMBER CONSTRAINT shop1_nn NOT NULL,Address VARCHAR2(50));

ASSIGN-3
ALTER TABLE Shopper MODIFY MobileNo VARCHAR2(15)
